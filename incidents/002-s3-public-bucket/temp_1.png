AWSTemplateFormatVersion: '2010-09-09'
Description: Temporary Incident 002 S3 + CloudFront misconfiguration lab

Resources:

  TempS3Bucket:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: !Sub "prod-customer-uploads-temp-${AWS::AccountId}-${AWS::Region}"

  TempIAMRole:
    Type: AWS::IAM::Role
    Properties:
      RoleName: TempIncident002Role
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Allow
            Principal:
              Service: ec2.amazonaws.com
            Action: sts:AssumeRole

  TempBucketPolicy:
    Type: AWS::S3::BucketPolicy
    Properties:
      Bucket: !Ref TempS3Bucket
      PolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Deny
            Principal: "*"
            Action: "s3:GetObject"
            Resource: !Sub "${TempS3Bucket.Arn}/*"
            Condition:
              StringNotEquals:
                aws:PrincipalArn: !GetAtt TempIAMRole.Arn

  TempCloudFrontOAI:
    Type: AWS::CloudFront::CloudFrontOriginAccessIdentity
    Properties:
      CloudFrontOriginAccessIdentityConfig:
        Comment: "Temp OAI for Incident 002 lab"

  TempCloudFrontDistribution:
    Type: AWS::CloudFront::Distribution
    Properties:
      DistributionConfig:
        Enabled: true
        Origins:
          - Id: S3Origin
            DomainName: !GetAtt TempS3Bucket.DomainName
            S3OriginConfig:
              OriginAccessIdentity: !Sub "origin-access-identity/cloudfront/${TempCloudFrontOAI}"
        DefaultCacheBehavior:
          TargetOriginId: S3Origin
          ViewerProtocolPolicy: allow-all
          AllowedMethods:
            - GET
            - HEAD
        DefaultRootObject: index.html
        ViewerCertificate:
          CloudFrontDefaultCertificate: true
